        <Button x:Name="btnRegistrar" Content="Registrar" HorizontalAlignment="Left" Height="28" Margin="523,365,0,0" VerticalAlignment="Top" Width="101" Click="btnRegistrar_Click"/>
    </Grid>
</Window>
