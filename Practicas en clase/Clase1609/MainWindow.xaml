<Window x:Class="Clase1609.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clase1609"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dtgClientes" HorizontalAlignment="Left" Height="414" Margin="384,0,0,0" VerticalAlignment="Center" Width="393" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <Label Content="Nombre" HorizontalAlignment="Left" Height="23" Margin="10,30,0,0" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="txtNombre" HorizontalAlignment="Left" Height="23" Margin="110,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="219"/>
        <Label Content="Direccion" HorizontalAlignment="Left" Height="23" Margin="10,79,0,0" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="txtDireccion" HorizontalAlignment="Left" Height="23" Margin="110,79,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="219"/>
        <Label Content="Telefono" HorizontalAlignment="Left" Height="23" Margin="10,127,0,0" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="txtTelefono" HorizontalAlignment="Left" Height="23" Margin="110,127,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="219"/>
        <Button x:Name="btnRegistrar" Content="Registrar" HorizontalAlignment="Left" Height="27" Margin="46,190,0,0" VerticalAlignment="Top" Width="143" Click="btnRegistrar_Click"/>
        <Button x:Name="btnInformacion" Content="Ver informacion" HorizontalAlignment="Left" Height="27" Margin="201,190,0,0" VerticalAlignment="Top" Width="140" Click="btnInformacion_Click"/>
    </Grid>
</Window>
